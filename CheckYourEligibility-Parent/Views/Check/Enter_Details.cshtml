@model CheckYourEligibility_FrontEnd.Models.Parent

@{
    ViewData["Title"] = "Check Details";
}

<a class="govuk-back-link" href="@Url.Action("Index", "Home")" onclick="history.back(); return false;">Back</a>
@* <a class="govuk-back-link-nolink"></a> *@

@if (!ViewData.ModelState.IsValid)
{
    ViewData["Title"] = "Error: Check Details";
    <partial name="_ValidationSummary" model="ViewData.ModelState" />
}

<h1 class="govuk-heading-l">Enter your details</h1>

<p>The information you provide will be compared with other government departments records to check for your eleigibility. For further information, please check our <a href="@Url.Action("Privacy", "Home")">Privacy statement</a>.</p>

<form asp-controller="Check" asp-action="Enter_Details" method="post">
    <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
            What is your name?
        </legend>

        <div class="govuk-form-group">
            <label class="govuk-label" for="first-name">
                Your first name
            </label>
            <p class="govuk-error-message">
                <span asp-validation-for="FirstName"></span>
            </p>
            <input class="govuk-input govuk-!-width-two-thirds @(ViewData.ModelState["FirstName"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="FirstName" type="text" aria-label="Your first name">
        </div>

        <div class="govuk-form-group">
            <label class="govuk-label" for="surname">
                Your last name
            </label>
            <p class="govuk-error-message">
                <span asp-validation-for="LastName"></span>
            </p>
            <input class="govuk-input govuk-!-width-two-thirds @(ViewData.ModelState["LastName"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="LastName" type="text" aria-label="Your last name">
        </div>
    </fieldset>

    <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" role="group" aria-describedby="dob-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                What is your date of birth?
            </legend>

            <div id="dob-hint" class="govuk-hint">
                For example, 31 3 1980
            </div>

            <span asp-validation-for="DateOfBirth" class="govuk-error-message"></span>

            <div class="govuk-date-input" id="DateOfBirth">
                <div class="govuk-date-input__item">
                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-date-input__label" for="Day">
                            Day
                        </label>
                        <input class="govuk-input govuk-date-input__input govuk-input--width-2 @(ViewData.ModelState["Day"]?.Errors.Count > 0 || ViewData.ModelState["DateOfBirth"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="Day" id="Day" type="text" inputmode="numeric" maxlength="2" aria-label="Day" />
                    </div>
                </div>

                <div class="govuk-date-input__item">
                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-date-input__label" for="Month">
                            Month
                        </label>
                        <input class="govuk-input govuk-date-input__input govuk-input--width-2 @(ViewData.ModelState["Month"]?.Errors.Count > 0 || ViewData.ModelState["DateOfBirth"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="Month" id="Month" type="text" inputmode="numeric" maxlength="2" aria-label="Month" />
                    </div>
                </div>

                <div class="govuk-date-input__item">
                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-date-input__label" for="Year">
                            Year
                        </label>
                        <input class="govuk-input govuk-date-input__input govuk-input--width-4 @(ViewData.ModelState["Year"]?.Errors.Count > 0 || ViewData.ModelState["DateOfBirth"]?.Errors.Count > 0 ? "govuk-input--error" : "")" asp-for="Year" id="Year" type="text" inputmode="numeric" maxlength="4" aria-label="Year" />
                    </div>
                </div>
            </div>

        </fieldset>
    </div>



    <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" aria-describedby="ni-number-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                Do you have a National Insurance number?
            </legend>

            <div id="ni-number-hint" class="govuk-hint">
                It’s on your National Insurance card, payslip, P60 or letters about tax, pension and benefits.
            </div>

            <div class="govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" asp-for="IsNinoSelected" type="radio" value="true" aria-controls="conditional-ni-number" aria-expanded="false" aria-label="Yes">
                    <label class="govuk-label govuk-radios__label" for="NationalInsuranceNumber">
                        Yes
                    </label>
                </div>

                <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-ni-number">

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="ni-number-entered">
                            Your National Insurance number
                        </label>
                        <div id="ni-number-entered-hint" class="govuk-hint">
                            For example, ‘QQ 12 34 56 C’
                        </div>
                        <p class="govuk-error-message">
                            <span asp-validation-for="NationalInsuranceNumber"></span>
                        </p>
                        <input class="govuk-input govuk-!-width-one-third" asp-controller="Check" asp-for="NationalInsuranceNumber" type="text" spellcheck="false" aria-describedby="ni-number-entered-hint" autocomplete="text" aria-label="Your National Insurance Number">
                    </div>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" asp-for="IsNinoSelected" type="radio" value="false" aria-label="No, I do not have one">
                    <label class="govuk-label govuk-radios__label" for="ni-number-2">
                        No, I do not have one
                    </label>
                </div>
            </div>
        </fieldset>
    </div>
    <button class="govuk-button govuk-!-margin-top-5" data-module="govuk-button">
        Save and continue
    </button>
</form>

<script src="/js/validationSummary.js"></script>