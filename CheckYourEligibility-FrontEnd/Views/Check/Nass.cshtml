@using CheckYourEligibility_FrontEnd.ViewModels
@using Newtonsoft.Json
@model CheckYourEligibility_FrontEnd.ViewModels.ParentDetailsViewModel

@{
    ViewData["Title"] = "Nass Number";
    ViewData["ServiceName"] = "Check a family's eligibility";

    var request = TempData["Request"] as string;
    var parentDetailsViewModel = JsonConvert.DeserializeObject<ParentDetailsViewModel>(request);
}

@if (!ViewData.ModelState.IsValid)
{
    ViewData["Title"] = "Error: Nass Number";
    <partial name="_ValidationSummary" model="ViewData.ModelState" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-controller="Check" asp-action="Nass" method="post" novalidate>

            <input type="hidden" asp-for="NationalInsuranceNumber" value="@parentDetailsViewModel.NationalInsuranceNumber" />
            <input type="hidden" asp-for="FirstName" value="@parentDetailsViewModel.FirstName" />
            <input type="hidden" asp-for="LastName" value="@parentDetailsViewModel.LastName" />
            <input type="hidden" asp-for="Day" value="@parentDetailsViewModel.Day" />
            <input type="hidden" asp-for="Month" value="@parentDetailsViewModel.Month" />
            <input type="hidden" asp-for="Year" value="@parentDetailsViewModel.Year" />

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="nass-number-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            Do you have an asylum support reference number?
                        </h1>
                    </legend>

                    <div id="nass-number-hint" class="govuk-hint">
                        This can be found on letters from the Home Office. It was previously known as a NASS number.
                    </div>

                    <div class="govuk-radios" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" asp-for="IsNassSelected" type="radio" value="true" data-aria-controls="conditional-nass-number" aria-expanded="false">
                            <label class="govuk-label govuk-radios__label" for="nass-number">
                                Yes
                            </label>
                        </div>

                        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-nass-number">
                            <div class="govuk-form-group">
                                <label class="govuk-label" for="nass-number-entered">
                                    Asylum support reference number
                                </label>
                                <div id="nass-number-entered-hint" class="govuk-hint">
                                    Enter the first 9 numbers
                                </div>
                                <p class="govuk-error-message">
                                    <span asp-validation-for="NationalAsylumSeekerServiceNumber"></span>
                                </p>
                                <input class="govuk-input govuk-!-width-one-third" asp-for="NationalAsylumSeekerServiceNumber" type="text" inputmode="numeric" maxlength="10" spellcheck="false" aria-describedby="nass-number-entered-hint" autocomplete="text">
                            </div>
                        </div>

                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" asp-for="IsNassSelected" type="radio" value="false">
                            <label class="govuk-label govuk-radios__label" for="nass-number-2">
                                No, I do not have one
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Save and continue
            </button>
        </form>
    </div>
</div>

<script src="/js/validationSummary.js"></script>